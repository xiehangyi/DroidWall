<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xhy.droidwall.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#ffffffff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_mode"
            android:text="Mode: "
            android:textSize="20sp"
            android:clickable="true"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#ffffffff"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3sp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_wifi"
            android:clickable="false"
            android:src="@drawable/ic_signal_wifi_0_bar_24dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="3sp"
            android:paddingRight="10sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_3g"
            android:layout_toRightOf="@id/img_wifi"
            android:src="@drawable/ic_swap_vert_24dp"
            android:clickable="false"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_download"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_file_download_24dp"
            android:paddingLeft="22sp"
            android:clickable="false"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_upload"
            android:layout_toLeftOf="@id/img_download"
            android:src="@drawable/ic_file_upload_24dp"
            android:clickable="false"
            />
    </RelativeLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        ></ListView>

</LinearLayout>
